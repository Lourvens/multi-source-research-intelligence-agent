# =============================================================================
# Research Agent Configuration
# =============================================================================
# Copy this file to .env and update with your values
# cp .env.example .env
#
# All values are optional and have sensible defaults
# =============================================================================

# -----------------------------------------------------------------------------
# API Keys (At least one is required)
# -----------------------------------------------------------------------------
# OpenAI API Key (for LLM and embeddings)
OPENAI_API_KEY=

# Anthropic API Key (alternative to OpenAI)
ANTHROPIC_API_KEY=

# -----------------------------------------------------------------------------
# ArXiv Configuration
# -----------------------------------------------------------------------------
# Maximum number of results to fetch from ArXiv
ARXIV_MAX_RESULTS=100

# Delay between API calls (seconds) - be respectful to ArXiv servers
ARXIV_DELAY_SECONDS=3.0

# -----------------------------------------------------------------------------
# Document Processing
# -----------------------------------------------------------------------------
# Default chunk size for document splitting
CHUNK_SIZE=1000

# Overlap between chunks (helps maintain context)
CHUNK_OVERLAP=200

# -----------------------------------------------------------------------------
# Vector Store (ChromaDB)
# -----------------------------------------------------------------------------
# Path to vector database directory (default: ./vector_db)
# Leave empty to use default location
VECTOR_DB_PATH=

# Default ChromaDB collection name
COLLECTION_NAME=arxiv_papers

# -----------------------------------------------------------------------------
# Embedding Model
# -----------------------------------------------------------------------------
# Embedding model name (HuggingFace format)
# Default: sentence-transformers/all-MiniLM-L6-v2 (384 dimensions)
# Other options:
#   - sentence-transformers/all-mpnet-base-v2 (768 dimensions, better quality)
#   - sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2 (multilingual)
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# -----------------------------------------------------------------------------
# LLM Configuration
# -----------------------------------------------------------------------------
# LLM model name (OpenAI format)
LLM_MODEL=gpt-3.5-turbo

# LLM temperature (0.0 = deterministic, 2.0 = creative)
LLM_TEMPERATURE=0.0

# -----------------------------------------------------------------------------
# Retrieval Configuration
# -----------------------------------------------------------------------------
# Number of top documents to retrieve for RAG
RETRIEVAL_TOP_K=5

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
